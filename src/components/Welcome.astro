---
import { Image } from "astro:assets";
import ComoEmpezar from "./ComoEmpezar.astro";
const enlaceDiscord = import.meta.env.PUBLIC_DISCORD_LINK;
---

<main class="w-screen h-[calc(100vh-40px)]">
  <div
    id="intro"
    class="m-auto h-full text-center flex flex-col justify-center items-center"
  >
    <div
      class="flex justify-center items-center gap-3 max-w-screen w-screen flex-col md:flex-row md:text-left"
    >
      <Image
        src="/favicon.png"
        alt="Logo RitmosBot"
        width="120"
        height="120"
        loading="eager"
      />
      <div>
        <h1 class="md:text-left w-full font-bold text-3xl">RitmosBot</h1>
        <h2 class="mt-2">
          Bot de música que permite a los usuarios disfrutar de su música en
          Discord
        </h2>
        <div
          class="mt-3 ml-4 mr-4 md:ml-0 md:mr-0 flex sm:flex-row flex-col gap-2 sm:w-80 md:w-fit"
        >
          <a href="/comandos" class="boton" id="boton-comandos">Comandos</a>
          <a href={enlaceDiscord} class="boton">Añadir a tu servidor</a>
        </div>
      </div>
    </div>
    <ComoEmpezar />
  </div>
</main>

<style>
  .boton {
    background-color: blueviolet;
    border: 1px solid blueviolet;
    border-radius: 10px;
    margin-top: 10px;
    padding: 10px;
  }

  #boton-comandos {
    background-color: white;
    border: 1px solid white;
    color: black;
  }
</style>
