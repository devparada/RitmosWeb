---
import "../styles/global.css";
const { titulo = "Web | RitmosWeb" } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="canonical" href="https://ritmosweb.vercel.app/" />
		<link rel="icon" type="image/png" href="/favicon.png" />
